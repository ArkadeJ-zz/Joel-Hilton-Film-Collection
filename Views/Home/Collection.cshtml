@{
    ViewBag.Title = "Joel's Collection";
}

@model IEnumerable<Joel_Hilton_Film_Collection.Models.Movies>;

<div>
    <h2>Movies in Joel's Collection</h2>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Ratilng</th><th>Edited</th><th>Lent to</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach (Joel_Hilton_Film_Collection.Models.Movies x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.Lent</td>
                        <td>@x.Notes</td>
                    </tr>
                    }
                }
        </tbody>
    </table>
</div>